<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nenxanh1"
    android:orientation="vertical"
    tools:context=".Cong_tru_nhan_chia_Activity">

    <EditText
        android:id="@+id/editTextText1"
        android:layout_width="312dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Nhập số a"
        android:layout_marginLeft="45dp"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="39dp" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="312dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Nhập số b"
        android:layout_marginLeft="45dp"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText1"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonTinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:text="Tính"
        app:layout_constraintBottom_toTopOf="@+id/txtkq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2" />

    <TextView
        android:id="@+id/txtkq"
        android:layout_width="209dp"
        android:layout_height="52dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="310dp" />

    <Button
        android:id="@+id/buttonTrove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Trở về"
        android:layout_marginLeft="150dp"
        app:layout_constraintTop_toBottomOf="@+id/txtkq"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="152dp" />

</LinearLayout>