<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:padding="10dp"
        android:id="@+id/imageviewHinh"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/textviewTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="Tên"
        android:textColor="#ff00"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/imageviewHinh" />

    <TextView

        android:id="@+id/textviewMota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewTen"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:text="Mô tả"
        android:textColor="#003cff"
        android:textSize="22dp"
        app:layout_constraintLeft_toRightOf="@id/imageviewHinh"
        app:layout_constraintTop_toBottomOf="@+id/textviewTen" />

</androidx.constraintlayout.widget.ConstraintLayout>